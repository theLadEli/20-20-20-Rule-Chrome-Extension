{
    "manifest_version": 3,
    "name": "20-20-20 Rule",
    "version": "1.0",
    "description": "A Chrome extension to help you avoid eye strain with the 20-20-20 rule.",

    "action": {
      "default_popup": "popup.html",
      "default_title": "Click here to set or manage your 20-20-20 timer."
    },

    "icons": {
        "16": "assets/logo/16x16.png",
        "32": "assets/logo/32x32.png",
        "48": "assets/logo/48x48.png",
        "128": "assets/logo/128x128.png"
    },

    "content_scripts": [
        {
          "js": ["index.js"],
          "matches": [
            "<all_urls>"
          ]
        }
    ],

    "permissions": [
        "alarms",
        "notifications",
        "storage"
      ]

  }